# Site configuration
NEXT_PUBLIC_BASE_URL=https://classyclothes.coupons
NEXT_PUBLIC_SITE_NAME="Classy Clothes"

# Security keys for API routes and cron jobs
CRON_SECRET_KEY=your-random-secret-key-here

# Email notification settings (for scam reports)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASS=your-smtp-password
NOTIFICATION_EMAIL=admin@example.com

# Puppeteer configuration for screenshots
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
# Set to "true" in development environment
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# Vercel specific configuration
VERCEL_URL=classyclothes.coupons

# Scanner configuration
SCAN_INTERVAL_HOURS=24
MAX_SCREENSHOTS_PER_SCAN=5
SCAM_DETECTION_THRESHOLD=0.7
